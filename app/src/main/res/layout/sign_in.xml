<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDBF09"
    tools:context=".MainActivity">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="-40dp"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="80dp"
            android:padding="40dp">


            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext"
                android:drawableRight="@drawable/done"
                android:paddingEnd="50px"
                android:hint="Username
" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="50dp"
                android:background="@drawable/custom_edittext"
                android:drawableRight="@drawable/done"
                android:paddingEnd="50px"
                android:hint="Password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5px"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remember me"
                    android:alpha="0.7"/>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:fontFamily="sans-serif-medium"
                    android:alpha="0.9"
                    android:text="Forgot Password?" />
            </LinearLayout>


            <Button
                android:id="@+id/button1"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button"
                android:fontFamily="sans-serif-black"
                android:text="Sign In"
                android:textSize="17dp"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.7"
                android:text="Or Login with" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/fb">
                </ImageView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/git"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/gg">
                </ImageView>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView10"
            android:padding="60px"
            android:drawableLeft="@drawable/back"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="10dp"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Welcome back! We're excited to see you again. Please log in to pick!"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>



</RelativeLayout>